@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
	<div class="row text-center my-lg-5">
		<div class="col-lg-12">
			<h2>Конструктор тестов</h2>
		</div>
	</div>

	<div class="row">
		<div class="col-4 offset-1 mb-1">
			<label>Название теста</label>
			<input type="text" class="form-control" />
		</div>
	</div>
	<div class="row">
		<div class="col-4 offset-1 mb-1">
			<label>Время прохождения</label>
			<input type="time" class="form-control" />
		</div>
	</div>
	<div class="row">
		<div class="col-4 offset-1 mb-5">
			<label>Число попыток</label>
			<input type="number" class="form-control" />
		</div>
	</div>
	<div class="row">
		<div class="col-4 offset-1 mb-1">
			<h2>Вопросы</h2>
		</div>
	</div>

	<div class="row">
		<div class="col-4 offset-1 my-2">
			<div id="questions"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-4 offset-1 mb-1">
			<button id="btnAddQuestion" class="form-control">Добавить вопрос</button>
		</div>
	</div>

	@Scripts.Render("~/Scripts/jquery-3.0.0.min.js")
	@Scripts.Render("~/Scripts/custom/add-question.js")
	@Scripts.Render("~/Scripts/custom/add-q.js")
</div>